# ============================================
# PRODUCTION DEPLOYMENT CONFIGURATION
# ============================================
# Copy this file to .env and update with your production values
# NEVER commit .env to version control!

# ============================================
# SECURITY - REQUIRED FOR PRODUCTION
# ============================================
# JWT Secret (REQUIRED for production)
# Generate a strong secret: at least 256 bits (32+ characters)
# Use: openssl rand -base64 32
JWT_SECRET=your-very-long-and-secure-secret-key-minimum-256-bits-here

# ============================================
# DATABASE CONFIGURATION
# ============================================
POSTGRES_DB=billsplit
POSTGRES_USER=billsplit_user
# Use a strong password in production!
POSTGRES_PASSWORD=your-strong-database-password-here

# ============================================
# EMAIL CONFIGURATION - Resend API (Recommended)
# ============================================
# Resend API Key (get from https://resend.com/api-keys)
# Free tier: 3,000 emails/month
RESEND_API_KEY=re_your_resend_api_key_here

# From Email Address
# For testing: onboarding@resend.dev
# For production: noreply@yourdomain.com (after domain verification)
RESEND_FROM_EMAIL=onboarding@resend.dev

# Reply-To Email (Optional)
# Where users' replies will go
RESEND_REPLY_TO=support@yourdomain.com

# ============================================
# APPLICATION URLS
# ============================================
# Production URL (for email links and CORS)
APP_URL=https://your-production-domain.com

# Application Name (used in emails)
APP_NAME=BillSplit

# CORS Allowed Origins (comma-separated for multiple)
# Example: https://yourdomain.com,https://www.yourdomain.com
CORS_ALLOWED_ORIGINS=https://your-production-domain.com

# Frontend API URL
REACT_APP_API_URL=https://your-api-domain.com/api

# ============================================
# LOGGING CONFIGURATION (Optional)
# ============================================
# Log levels: DEBUG, INFO, WARN, ERROR
# For production, use INFO or WARN
LOG_LEVEL=INFO
SECURITY_LOG_LEVEL=WARN
WEB_LOG_LEVEL=INFO
HIBERNATE_LOG_LEVEL=WARN

# ============================================
# RATE LIMITING CONFIGURATION (Optional)
# ============================================
# Enable/disable rate limiting
RATE_LIMIT_ENABLED=true
# Maximum requests per time window
RATE_LIMIT_REQUESTS=100
# Time window in minutes
RATE_LIMIT_WINDOW_MINUTES=1

